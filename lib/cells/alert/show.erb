<%= content_tag(:div, **props_for(:alert)) do %>
  <% if meta_for(:alert, :dismissable) %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
      <span aria-hidden="true">&times;</span>
    </button>
  <% end %>

  <% if value_for(:title) %>
    <%= content_tag(:h4, value_for(:title), **props_for(:title)) %>
  <% end %>

  <% if value_for(:body) %>
    <%= content_tag(:div, value_for(:body), **props_for(:body)) %>
  <% end %>
<% end %>
